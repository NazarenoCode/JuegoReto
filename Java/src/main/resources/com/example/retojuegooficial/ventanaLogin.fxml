      <Label layoutX="104.0" layoutY="14.0" prefHeight="57.0" prefWidth="277.0" text="Login">
         <font>
            <Font name="System Bold Italic" size="46.0" />
         </font>
      </Label>
      <Label layoutX="46.0" layoutY="111.0" text="Email :">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="20.0" layoutY="151.0" text="Password  : ">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="159.0" layoutY="200.0" mnemonicParsing="false" onAction="#clickLogin" prefHeight="26.0" prefWidth="94.0" text="Log In" />
